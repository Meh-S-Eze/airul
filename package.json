{
  "name": "airul",
  "version": "0.1.7",
  "description": "CLI tool for generating AI rules from project documentation",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "airul": "./dist/cli.js"
  },
  "scripts": {
    "clean": "rm -rf dist",
    "build": "npm run clean && tsc",
    "test": "jest",
    "test:cleanup": "rm -rf test/__test_outputs__",
    "lint": "eslint src/**/*.ts",
    "prepare": "npm run build",
    "version": "node scripts/update-cli-version.js && git add src/cli.ts",
    "rules": "airul generate"
  },
  "keywords": [
    "ai",
    "rules",
    "documentation",
    "context",
    "windsurf",
    "cursor"
  ],
  "author": "Dmitry Kury (d@dkury.com)",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mitkury/airul.git"
  },
  "homepage": "https://github.com/mitkury/airul#readme",
  "bugs": {
    "url": "https://github.com/mitkury/airul/issues"
  },
  "devDependencies": {
    "@types/jest": "^29.5.0",
    "@types/node": "^20.0.0",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "airul": "^0.1.6",
    "eslint": "^8.0.0",
    "jest": "^29.5.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0"
  },
  "dependencies": {
    "commander": "^11.0.0",
    "cosmiconfig": "^9.0.0",
    "glob": "^10.0.0"
  }
}
